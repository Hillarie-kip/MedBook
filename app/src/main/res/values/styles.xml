<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ProgressUpload" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">uploading Please wait....</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="ProgressLoading" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">loading Please wait....</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="ProgressDelete" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">deleting record Please wait....</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="ProgressUpdate" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">updating Please wait....</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="DialogSpotCount">8</item>
    </style>

</resources>